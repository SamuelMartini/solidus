<%= render 'spree/admin/shared/settings_checkout_tabs' %>

<% admin_breadcrumb(t('spree.settings')) %>
<% admin_breadcrumb(t('spree.admin.tab.checkout')) %>
<% admin_breadcrumb(plural_resource_name(Spree::StoreCreditCategory)) %>

<% content_for :page_actions do %>
  <li id='new_store_credit_category_link'>
    <%= button_link_to t('spree.new_store_credit_category'), new_admin_store_credit_category_url, { remote: true, id: 'new_store_credit_category_link' } %>
  </li>
<% end %>

<div id='new_store_credit_category_container'></div>

<table id='ttt' class="index sortable inline-editable-table">
  <colgroup>
    <col style='width: 10%'>
    <col style='width: 30%'>
  </colgroup>
  <thead>
    <tr>
      <th>Name</th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @collection.each do |thing| %>
      <tr>
        <td>
          <%= fields_for thing do |f| %>
            <% f.text_field :name %>
          <% end %>
        </td>
        <td>
          <%= thing.non_expiring? %>
        </td>
        <td class="actions">
          <%= link_to_with_icon 'check', t('spree.actions.save'), api_store_credit_category_path(thing), no_text: true, data: { action: 'save' } %>
          <%= link_to_with_icon 'cancel', t('spree.actions.cancel'), nil, no_text: true, data: { action: 'cancel' } %>
          <%= link_to_delete thing, { url: api_store_credit_category_path(thing) , no_text: true } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
